<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".AllDrugsForPharmacy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Drugs To Stock:"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="200dp"
        android:textColor="#FF0000"
        android:textColorHint="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#80FFFFFF"
        android:orientation="vertical">

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/pharmacy_all_drugs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:hintText="Drugs" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        android:background="#000000"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:met_baseColor="#000"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="11"
        app:met_primaryColor="#000"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="#000" />

    </LinearLayout>

    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_set_drug"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_weight="2"
        android:background="#5f000000"
        android:text="Set Drug"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:minHeight="50dp"
        android:textStyle="bold"
        app:fButtonColor="#FF0000"
        app:cornerRadius="15dp"
        app:shadowColor="#9E6F6D6D"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"/>
</RelativeLayout>